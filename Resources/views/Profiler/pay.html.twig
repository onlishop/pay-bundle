{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% if collector.dump|length %}
        {% set icon %}
             {{ include('@Pay/Icon/pay.svg') }}
            <span class="sf-toolbar-value">Pay</span>
        {% endset %}

        {#{% set text %}
            <div class="sf-toolbar-info-piece">
                  ...
            </div>
        {% endset %}#}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
    {% endif %}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label{{ collector.dump|length == 0 ? ' disabled' }}">
        <span class="icon">
            {{ include('@Pay/Icon/pay.svg') }}
        </span>
        <strong>Pay</strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>Gateway execution graph</h2>
    {% if collector.dump|length %}
        <pre>{{ collector.dump|raw }}</pre>
    {% else %}
        <div class="empty">
            <p>No data was collected by Pay.</p>
        </div>
    {% endif %}
{% endblock %}
